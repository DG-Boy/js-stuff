extends layout

include _includes/shared-funs

block content
  .banner.page-header
    .col-lg-12
        h1= pageHeader.title
          small &nbsp; #{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      row.list-group

        each loc in locs
          .col-xs-12.list-group-item
            h4
              a(href="/loc") #{loc.name}
              
              small &nbsp;
                +printRating(loc.rating)

              span.badge.pull-right.badge-default #{loc.distance + "m"}

            p.address #{loc.address}

            p
              each facility in loc.facilities
                span.label.label-warning #{facility}
                | &nbsp
    .col-xs-12.col-md-4
      p.lead #{sidebar}
